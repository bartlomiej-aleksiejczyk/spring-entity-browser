<!DOCTYPE html>
<html>
<head>
    <title>Add New {{entityName}}</title>
</head>
<body>
    <h1>Add New {{entityName}}</h1>

    <form action="/add" method="post">
        <input type="hidden" name="entityName" value="{{entityName}}" />

        {{#fields}}
        <div class="form-group">
            <label for="{{fieldName}}">{{fieldName}} ({{fieldType}})</label>
            <input type="text" id="{{fieldName}}" name="{{fieldName}}" value="" required />
        </div>
        {{/fields}}

        <button type="submit">Create {{entityName}}</button>
    </form>

    <a href="/">Back to entity selection</a>
</body>
</html>
